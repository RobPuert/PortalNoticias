@model IEnumerable<PortalNoticias.Models.Tag>

<h2>Tags</h2>

<a asp-action="Create">
    <button style="margin: 0 15px;">Nova Tag</button>
</a>

<table>
    <thead>
        <tr>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tag in Model) {
            <tr>
                <td>@tag.Descricao</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btnEditar">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@tag.Id" class="btn btn-sm btn-danger"> Excluir </a>
                </td>
            </tr>
        }
    </tbody>
</table>
